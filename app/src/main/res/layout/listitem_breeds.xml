<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="breedItem"
            type="to.chip.dogsgallery.data.model.ui.CDGBreedItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,2.5:1"
            app:rippleColor="@color/primary_teal_2"
            app:cardCornerRadius="20dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="true"
            app:shapeAppearanceOverlay="@color/primary_navy_3"
            android:layout_marginVertical="5dp"
            app:cardBackgroundColor="@color/primary_bright_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/breedsThumbnailWrapper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:elevation="0dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <to.chip.dogsgallery.view.custom.CDGLetterImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:setItem="@{breedItem}" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/breedsName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="16sp"
                    android:lineSpacingExtra="5sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_navy_2"
                    tools:text="affenpinscher"
                    android:text="@{breedItem.name}"
                    app:layout_constraintEnd_toStartOf="@id/rightArrow"
                    app:layout_constraintStart_toEndOf="@id/breedsThumbnailWrapper"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/rightArrow"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_arrow_right_s_line"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/primary_navy_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>